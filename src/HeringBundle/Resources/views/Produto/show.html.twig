{% extends 'base.html.twig' %}

{% block body %}
    <h1>Produto</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Codigo</th>
                <td>{{ produto.codigo }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ produto.nome }}</td>
            </tr>
            <tr>
                <th>Tamanho</th>
                <td>{{ produto.tamanho }}</td>
            </tr>
            <tr>
                <th>Valor</th>
                <td>{{ produto.valor }}</td>
            </tr>
            <tr>
                <th>Modelo</th>
                <td>{{ produto.modelo }}</td>
            </tr>
            <tr>
                <th>Quantidade</th>
                <td>{{ produto.quantidade }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('produto_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('produto_edit', { 'id': produto.codigo }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
